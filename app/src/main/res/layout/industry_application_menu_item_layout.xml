<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="@drawable/border_edge">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/industry_application_menu_item_image_size"
        android:layout_height="@dimen/industry_application_menu_item_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/industry_application_menu_item_image_margin_bottom"
        android:layout_marginEnd="@dimen/industry_application_menu_item_image_margin_left_right"
        android:layout_marginLeft="@dimen/industry_application_menu_item_image_margin_left_right"
        android:layout_marginRight="@dimen/industry_application_menu_item_image_margin_left_right"
        android:layout_marginStart="@dimen/industry_application_menu_item_image_margin_left_right"
        android:layout_marginTop="@dimen/industry_application_menu_item_image_margin_top"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/industry_application_menu_item_title_margin_bottom"
        android:layout_marginTop="@dimen/industry_application_menu_item_title_margin_top"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/industry_application_menu_item_title_textColor"
        android:textSize="@dimen/industry_application_menu_item_title_textSize"
        tools:text="Title"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/industry_application_menu_item_content_textColor"
        android:textSize="@dimen/industry_application_menu_item_content_textSize"
        tools:text="Content"/>
</RelativeLayout>